<!-- Start Checkout -->
<section class="shop checkout section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-12">
                <div class="checkout-form">
                    <h2>Make Your Checkout Here</h2>
                   <br>
                

                    <!-- Form -->
                    <form class="form" method="post" action="/cart/checkout">
                        <div class="row">
                           
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Name<span>*</span></label>
                                    <input type="text" name="name" placeholder="Enter Your Last Name" required="required">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Address<span>*</span></label>
                                    <input type="text" name="address" placeholder="Enter Your Address" required="required">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Postal Code<span>*</span></label>
                                    <input type="number" pattern="[0-9]{6}" name="postalcode" placeholder="000000" required="required">
                                </div>
                            </div>
                             <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Cardholder Name<span>*</span></label>
                                    <input type="text" name="cardholder" placeholder="Enter your card name" required="required">
                                </div>
                            </div>
                               <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Credit Card Number<span>*</span></label>
                                    <input type="tel" inputmode="numeric" pattern="[0-9\s]{13,19}" name="cc" placeholder="0000-0000-0000-0000" required="required">
                                </div>
                            </div>
                              <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>Expiration Date<span>*</span></label>
                                    <input type="tel"pattern="[0-1][0-9]/[0-9]{2}" name="em" placeholder="07/23" required="required">
                                </div>
                            </div>
                               <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label>CVC<span>*</span></label>
                                    <input type="tel" name="cvc" max="999" pattern="[0-9][0-9][0-9]" required="required" placeholder="3 number pin">
                                </div>
                            </div>
                        </div>
                    
                    <!--/ End Form -->
                </div>
            </div>
           
            <div class="col-lg-4 col-12">
                <div class="order-details">
                    <!-- Order Widget -->
                    <div class="single-widget">
                        <h2>CART TOTALS</h2>
                        <div class="content">
                            <ul>
                                <li>Sub Total<span>${{total}}</span></li>
                                <li>(+) Shipping<span>$0</span></li>
                                <li class="last">Total<span>${{total}}</span></li>
                            </ul>
                        </div>
                    </div>
                    <!--/ End Order Widget -->
                    <!-- Order Widget -->
                    <div class="single-widget">
                        <h2>Payments</h2>
                   
                    </div>
                    <!--/ End Order Widget -->
                    <!-- Payment Method Widget -->
                    <div class="single-widget payement">
                        <div class="content">
                            <img src="/new/images/payment-method.png" alt="#">
                        </div>
                    </div>
                    <!--/ End Payment Method Widget -->
                    <!-- Button Widget -->
                    <div class="single-widget get-button">
                        <div class="content">
                            <div class="button">
                                  <button class="btn" type="submit">
                        proceed to order
                    </button>
                            </div>
                        </div>
                    </div>
                    <!--/ End Button Widget -->
                </div>
            </div>
        </div>
    </div>
     </form>
</section>
<!--/ End Checkout -->