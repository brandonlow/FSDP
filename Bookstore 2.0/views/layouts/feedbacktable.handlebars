{{>_sidenav}}
{{>_adminnavbar}}
<div class="content">
    {{#if feedbacks}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">Feedback Table</h4>
                        {{!-- <p class="card-category">Edit Here</p> --}}
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>Feedback ID</th>
                                <th>Name</th>
                                <th>Feedback</th>
                                <th>Rating</th>
                                <th>Date</th>
                                <th>Accepted To Reviews</th>
                            </thead>
                            {{#each feedbacks}}
                            <tbody>
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{name}} </td>
                                    <td>{{feedback}}</td>
                                    <td>{{options}}</td>
                                    <td>{{date}}</td>
                                    {{#if review}}
                                        <td>True</td>>
                                        <td onclick ="return confirm('Are you sure you want to remove this feedback from reviews?')"><a href="./removereview/{{id}}">Reject</a></td>
                                        {{else}}
                                        <td>False</td>
                                        <td onclick ="return confirm('Are you sure you want to add this feedback to reviews?')"><a href="./addreview/{{id}}">Accept</a></td>
                                    {{/if}}
                                    <td onclick ="return confirm('Are you sure you want to delete this feedback?')"><a href="./deletefeedback/{{id}}">Delete</a></td>
                                </tr>
                                </tbody>
                            {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
    <h2>No feedback found in table</h2>
{{/if}}
{{>_adminfooter}}