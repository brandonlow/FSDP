{{>_sidenav}}
{{>_adminnavbar}}
{{>_flashmsg}}
<div class="content">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="">
                    <div class="card-header ">
                        {{#ifEqual admin.role 'superadmin'}}
                        <h3 class="card-title">Admin Table &nbsp;&nbsp;&nbsp;&nbsp;<a href="/admin/showadd"><i
                                    class="ti-plus"></i></a></h3>
                        {{else}}
                        <h3 class="card-title">Admin Table </h3>
                        {{/ifEqual}}
                        <br>

                        {{!-- <p class="card-category">Edit Here</p> --}}
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped table-white" id="table" >

                            {{#if superadmin}}
                            <thead>
                                <th>User ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Action</th>
                                <th>Action</th>

                            </thead>


                            <tbody>
                                {{#each admins}}
                                <tr>
                                    
                                    <td>{{id}}</td>
                                    <td>&nbsp;{{name}} </td>
                                    <td>&nbsp;{{email}}</td>
                                    <td>&nbsp;{{role}}</td>

                                    <td>&nbsp;&nbsp;<a href="/admin/admintablelist/edit/{{id}}">Update</a></td>
                                    <td>&nbsp;&nbsp; <a href="/admin/admintablelist/delete/{{id}}"
                                            onclick="return confirm('Are you sure you want to delete {{name}}?');">Delete</a>
                                    </td>
                                    

                                    {{!-- <td><a href="/admin/admintablelist/delete/{{id}}">Delete</a></button> --}}
                                </tr>
                                  {{/each}}
                            </tbody>

                            {{else}}
                            <thead>
                                <th>User ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                               
                            </thead>
                          
                            <tbody>
                                 {{#each admins}}
                                <tr>    
                                     
                                    <td>{{id}}</td>
                                    <td>{{name}} </td>
                                    <td>{{email}}</td>
                                    <td>{{role}}</td>
                                </tr>
                                {{/each}}
                            </tbody>

                            {{/if}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>$(document).ready(function () {
        $.noConflict();
        $('#table').DataTable();
    });</script>
