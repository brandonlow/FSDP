{{>_sidenav}}
{{>_adminnavbar}}
<div class="content">
    {{#if Contact}}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover" style=" padding:10px;"  >
                    <div class="card-header" style="background-color:blueviolet;"  >
                        <h4 class="card-title" style= "color: white;padding:10px;font-size: 30px;"  >Respond Contact Table</h4>
                        {{!-- <p class="card-category">Edit Here</p> form-group --}}
                    </div>
                    <form action="/admin/responsecontacttable" method="post" id="respond">
                        <div class="row">

                            <div class="col-4">
                                <div class="form-group ">
                                    <label style="color: black;font-weight: bold;" >To:<span>*</span></label>
                                    <input name="email" class="form-control " type="name" value="{{Contact.email}}">
                                    <input name="name" type="hidden" value="{{Contact.name}}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label style= "color: black;font-weight: bold;">Your Subjects<span>*</span></label>
                                    <input name="subject" class="form-control" type="text" value="{{Contact.subject}}">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label style= "color: black;font-weight: bold;" >Users Message<span>*</span></label>
                                    <input name="message" class="form-control" type="text" value="{{Contact.message}}">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            
                            <div class="col-12">
                                <div class="form-group" >
                                    <label style= "color: black;font-weight: bold;" >your message<span>*</span></label>
                                    <textarea class="form-control" id="response" name="response" rows="10"></textarea>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group button" style=" padding:10px;"    >
                                    <input type="submit"style= "color: white;background-color:blueviolet;"   class="btn" value="SendEmail">
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
<h2>No Contact found in table</h2>
{{/if}}
<script>
    let submit = false;

    $(window).bind("beforeunload", function(){
        if (!submit){return" Changes that you made may not be saved."}  
        })
    $("#respond").submit(function(){submit = true})



</script>

