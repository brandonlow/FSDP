{{>_sidenav}}
{{>_adminnavbar}}
<div class="content">
    <div class="container-fluid">
        {{#if products}}
        <div class="row">
            <div class="col-md-12">
                <div class="card card-plain table-plain-bg">
                    
                    <div class="card-header ">
                        <h2 class="card-title">Product Table</h2>
                        <br>

                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table  id="table">
                            <thead>
                                 <th>Image</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Category</th>
                                <th>Num of copies</th>
                                <th>Price</th>
                                <th>Action</th>
                                <th>Action</th>
                            </thead>
                           
                            <tbody>
                                 {{#each products}}
                                <tr>
                                    <td><img src="/img/{{imagename}}"  width="100" height="100" alt=""></td>
                                    
                                    <td>&nbsp;&nbsp;{{title}}</td>
                                    <td>&nbsp;{{author}}</td>
                                    <td>&nbsp;{{category}}</td>
                                    <td>&nbsp;&nbsp;{{qty}}</td>
                                    <td>&nbsp;{{price}}</td>
                                    <td>&nbsp;&nbsp;<a href="./showupdateproduct/{{id}}">Update</a></td> 
                                    <td> &nbsp;&nbsp;<a href="./deleteproduct/{{id}}"
                                            onclick="return confirm('Are you sure you want to delete {{title}}?');">Delete</a>
                                    </td>
                                </tr>
                                 {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <h2>No products found in table</h2>
        {{/if}}
        <form action="./showaddproduct">
            <button type="submit" class="btn btn-info btn-fill pull-right">Add New Product</button>
        </form>
    </div>
</div>
<script>$(document).ready(function () {
        $.noConflict();
        $('#table').DataTable();
    });</script>
