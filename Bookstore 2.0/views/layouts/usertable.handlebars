{{>_sidenav}}
{{>_adminnavbar}}
{{>_flashmsg}}

<div class="content">
    <div class="container-fluid">
        {{#if users}}
        <div class="row">

            <div class="col-md-12">
                <div class="">
                    <div class="card-header ">
                        <h3 class="card-title">User Table</h3>
                        <br>
                        {{!-- <p class="card-category">Edit Here</p> --}}
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped" id="table">
                            <thead>
                                <th>User ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Action</th>
                                <th>Action</th>
                            </thead>
                          
                            <tbody>
                                {{#each users}}
                                <tr>
                                    <td >{{id}}</td>
                                    <td>&nbsp;{{name}} </td>
                                    <td>&nbsp;{{email}}</td>
                                    <td>&nbsp;<a href="/admin/usertablelist/edit/{{id}}">Update</a></td>
                                    <td> &nbsp;<a href="/admin/usertablelist/delete/{{id}}"
                                            onclick="return confirm('Are you sure you want to delete {{name}}?');">Delete</a>
                                </tr>
                                  {{/each}}
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
 <h2>No user found in table</h2>
{{/if}}
    </div>
</div>
<script>$(document).ready(function () {
        $.noConflict();
        $('#table').DataTable();
    });</script>

