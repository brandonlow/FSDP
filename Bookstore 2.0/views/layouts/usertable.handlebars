{{>_adminnavbar}}
{{>_flashmsg}}
<div class="content">
  
    <div class="container-fluid">
        {{#if users}}
        <div class="row">

            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header ">
                        <h4 class="card-title">User Table</h4>
                        {{!-- <p class="card-category">Edit Here</p> --}}
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <table class="table table-hover table-striped">
                            <thead>
                                <th>User ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Action</th>
                                <th>Action</th>
                            </thead>
                            {{#each users}}
                            <tbody>
                                <tr>
                                    <td>{{id}}</td>
                                    <td>{{name}} </td>
                                    <td>{{email}}</td>
                                    <td>{{password}}</td>
                                    <td><a href="/admin/usertablelist/edit/{{id}}">Update</a></td>
                                    <td><a href="/admin/usertablelist/delete/{{id}}">Delete</a></td>
                                </tr>
                                </tbody>
                            {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
 <h2>No user found in table</h2>
{{/if}}
    </div>
</div>

