<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="/">Home<i class="ti-arrow-right"></i></a></li>
                        <li class="active"><a href="/showreviews">Reviews</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Breadcrumbs -->

<section>
    <div class="container">
        <div>
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    {{#each feedbacks}}
                        <div class="col-lg-8 col-md-4">
                            <div>
                                <img src="images/profile.png" alt="img"
                                    width="40px" height="40px">
                                <h4>{{name}}</h4>
                                    <h6>Rating: {{options}}/5</h6>
                                    <h5>{{feedback}}</h5>
                                    <h6>{{date}}<h6>
                            </div>
                        </div>
                        <hr>
                    {{/each}}
                </div>
                <div class="col-lg-4 col-12">
                    <span class="heading">User Rating</span>
                    <p>4.1 average based on 254 reviews.</p>

                    <div class="side">
                        <div>5 star: 150</div>
                    </div>
                    <div class="side">
                        <div>4 star: 63</div>
                    </div>
                    <div class="side">
                        <div>3 star: 15</div>
                    </div>
                    <div class="side">
                        <div>2 star: 6</div>
                    </div>
                    <div class="side">
                        <div>1 star: 20</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>